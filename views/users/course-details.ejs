<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <!-- navigation -->
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <img
                src="/static/images/<%= course.image %>"
                class="img-fluid"
                alt=""
              />
            </div>
            <div class="col-md-8">
              <h1 class="h3 mb-3"><%= course.title %></h1>
              <p><%= course.subtitle %></p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-md-12">
              <p><%- course.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
