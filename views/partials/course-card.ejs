<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="/static/images/<%= image %>" class="img-fluid" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"  style="color:text-dark">
          <a class="text-dark" style="text-decoration: none; color:text-dark" href="/courses/<%= url %>"
            ><%= title %></a
          >
        </h5>
       
        <p class="card-text"><%= subtitle %></p>

        <% if (isStudent && !studentLearning) { %>
        <form  action="/course/add?_csrf=<%= csrfToken %>" method="post">
          <input type="hidden" name="courseid" value="<%= id %>" />
          <div class="row mb-3">
            <div class="col-sm-8 offset-sm-2">
              <button type="submit" class="btn btn-dark">Add Course</button>
            </div>
          </div>
        </form>
        <% } %>
       

      </div>
    </div>
  </div>
</div>
