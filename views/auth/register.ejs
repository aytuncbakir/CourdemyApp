<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <% if (typeof message != "undefined") { %>
          <div class="alert alert-<%= message.class %>">
            <%= message.text %>
          </div>
          <% } %>
          <form method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="row mb-3">
              <label for="baslik" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="baslik" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="baslik" class="col-sm-2 col-form-label"
                >Password</label
              >
              <div class="col-sm-10">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="radio" name="userRole" value="student" id="userRole">
              <label class="form-check-label" for="userRole">
                Register as Student
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="userRole" value="teacher" id="userRole" checked>
              <label class="form-check-label" for="userRole">
                Register as Teacher
              </label>
            </div>

            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-dark">Save</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
